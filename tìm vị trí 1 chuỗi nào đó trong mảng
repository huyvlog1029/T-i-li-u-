#include <cmath>

using namespace std; 

int main() { 
	
	char str1[26]; 
	strcpy(str1,"ditmemay"); 
	char *p = strchr(str1,'l');
	if (p !=NULL)
		cout<<"tim thay o vi tri: "<<p-str1<<endl; 
	else
		cout<<"k co !"<<endl; 
	
	
	char str2[300]; 
	strcpy(str2,"lon di me may thg cho suc vat hoc!"); 
	char *p2= strstr(str2,"thg"); 
	
	if (p2 == NULL)
		cout<<"k thay"; 
	else cout<<"co thay!! o vi tri: "<<p2-str2<<"\n"; 
	
  return 0; 
  
  
} 
 
